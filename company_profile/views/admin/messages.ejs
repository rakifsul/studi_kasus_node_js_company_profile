<div class="row mt-2">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <h3>Messages</h3>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <% if (data.results <= 0) { %>
        <h4>No Messages</h4>
        <% } else { %>
        <h4>You've Got Messages</h4>
        <% } %>
      </div>
      <hr>
      <div class="row">
        <% data.results.forEach((item, index)=> { %>
        <div class="col-md-4 mb-3">
          <div class="card mx-3">
            <div class="card-body">
              <h5 class="card-text">
                <%= item.name %>
              </h5>

              <h5 class="card-text">
                <%= item.email %>
              </h5>

              <p><%= item.message %></p>
            </div>

            <div class="card-footer">
              <a href="/admin/messages/delete/<%= item._id %>"><span class="badge rounded-pill text-bg-danger">Delete</span></a>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>